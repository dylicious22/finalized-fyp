<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/mint"
    android:orientation="vertical"
    tools:context="com.example.dylicious.mydoctors.AddMenu">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:src="@drawable/page_heart"/>

    <Button
        android:id="@+id/AddDoc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ADD NEW DOCTOR"
        android:background="@color/white"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/AddApp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ADD NEW APPOINTMENT"
        android:background="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/AddUser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ADD NEW FAMILY MEMBER"
        android:background="@color/white"/>

</LinearLayout>
